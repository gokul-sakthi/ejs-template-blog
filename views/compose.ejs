<%- include('partials/header'); %>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label  for="title">Title</label>
    <input type="text" class="form-control" name="publishText" id="title" placeholder="Publish your content" required>
  </div>

  <div class="form-group">
    <label  for="Posting">Post</label>
    <textarea name="postBody" class="form-control" rows="5" cols="80" id="Posting" required></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>


